<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="AdminScanPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.app.model.Usuario</class>
        <class>com.app.model.AdminScan</class>
        <class>com.app.model.Lector</class>
        <class>com.app.model.Scan</class>
        <class>com.app.model.Manga</class>
        <class>com.app.model.Capitulo</class>
        <class>com.app.model.Lista</class>
        <class>com.app.model.ListaManga</class>
        <class>com.app.model.Favoritos</class>
        <class>com.app.model.Lista</class>
        <class>com.app.model.ComentarioManga</class>
        <class>com.app.model.MangaLike</class>
        <class>com.app.model.HistorialVisitas</class>


        <properties>
            <!-- PROPIEDADES PARA JAKARTA EE -->
            <!-- En desarrollo local (sin Docker) -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/adminscan?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;maxAllowedPacket=67108864"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            
            <!-- Nota: En Docker, estas propiedades son sobrescritas por EntityManagerFactoryProvider 
                 usando las variables de entorno DB_HOST, DB_PORT, DB_NAME, DB_USER, DB_PASSWORD -->

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
