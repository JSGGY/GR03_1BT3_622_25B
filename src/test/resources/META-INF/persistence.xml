<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Persistence Unit para TESTS con H2 en memoria -->
    <persistence-unit name="AdminScanPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.app.model.Usuario</class>
        <class>com.app.model.AdminScan</class>
        <class>com.app.model.Lector</class>
        <class>com.app.model.Scan</class>
        <class>com.app.model.Manga</class>
        <class>com.app.model.Capitulo</class>
        <class>com.app.model.CapituloImagen</class>
        <class>com.app.model.ComentarioManga</class>
        <class>com.app.model.Favoritos</class>
        <class>com.app.model.Lista</class>
        <class>com.app.model.ListaManga</class>

        <properties>
            <!-- H2 Database en memoria para tests -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;MODE=MySQL"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- ConfiguraciÃ³n de Hibernate para H2 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>

